generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @map("_id") @default(auto()) @db.ObjectId
  clerkId      String   @unique
  email        String?
  first_name   String?
  last_name    String?
  skills       String[]
  bio          String?
  phone_number String?
  role         user_role @default(client)
  createdAt    DateTime @default(now())
}



enum user_role {
  tasker
  client
}
