generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @map("_id") @default(auto()) @db.ObjectId
  clerkId      String   @unique
  email        String?
  first_name   String?
  last_name    String?
  skills       String[]
  gender  gender @default(male)
  bio          String?
  phone_number String?
  profile_image String?
  role         user_role @default(client)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum gender {
  female
  male 
  other
}


enum user_role {
  tasker
  client
}


model Task {
  id          String   @id @map("_id") @default(auto()) @db.ObjectId
  price       Float
  description String
  category    String
}

model Review {
  id     String  @id @map("_id") @default(auto()) @db.ObjectId
  name   String
  rating Int
  text   String
}